/* 水平间距 */
.my-userinfo-container {
  height: 100%;
}
.my-userinfo-container .top-box {
  height: 250rpx;
  background-color: #c00000;
  display: flex;
  align-items: center;
}
.my-userinfo-container .top-box .avatar {
  display: block;
  width: 90px;
  height: 90px;
  border-radius: 45px;
  margin-left: 60rpx;
}
.my-userinfo-container .top-box .info {
  display: flex;
  flex-direction: column;
  margin-bottom: 12rpx;
  margin-left: 12rpx;
}
.my-userinfo-container .top-box .info .nickname {
  text-align: left;
  color: white;
  font-size: 30px;
}
.my-userinfo-container .top-box .info .telephone {
  color: white;
  font-size: 16px;
}

